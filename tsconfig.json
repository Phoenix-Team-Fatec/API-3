{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "server/src/out",
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": [
    "server/src/**/*",
    "server/src/models",
    "server/src/database",
    "server/src/controllers"
  ]
}
